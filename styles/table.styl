table
  color = lighten(light-gray, 40%)
  width 100%
  margin 15px 0
  tr
    td, th
      padding 4px 8px
      text-align left
      border-bottom 2px solid color
      &:first-child
        padding-left 8px
      &:last-child
        padding-right 8px
      span.label
        height 16px
        padding 2px 6px
        background #aaa
        font-weight normal
      pre
        background none
        border none
    &:nth-child(2n)
      background color
  thead tr
    background color
